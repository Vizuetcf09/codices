{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2023",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@scr/*": ["src/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["lib", "src/scss", "create-codices.ts"],
  "exclude": ["node_modules", "dist"]
}
